<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-3"> 
    <%= form.label :preço, style: "display: block" %>
    <%= form.number_field :price, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :marca, style: "display: block" %>
    <%= form.text_field :brand, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :categoria, style: "display: block" %>
    <%= form.text_field :category, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :descrição, style: "display: block" %>
    <%= form.textarea :description, class:"form-control" %>
  </div>

  <div class="mb-3"> 
    <%= form.label :quantidade, style: "display: block" %>
    <%= form.number_field :quantity, class:"form-control" %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
